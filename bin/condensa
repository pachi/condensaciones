"""Script de arranque de la aplicación sin necesidad de instalarla"""

import os, sys
import warnings

if not hasattr(sys, 'frozen'):
    currpath = os.path.abspath(os.path.join(os.path.dirname(__file__), '..'))
    sys.path.append(currpath)
else:
    warnings.simplefilter('ignore')

from condensaciones.gtkui import GtkCondensa
from condensaciones.cerramiento import Cerramiento
from condensaciones.clima import Clima

climae = Clima(5, 96) #datos para provocar condensaciones
climai = Clima(20.0, 55) #según clase de higrometría: 3:55%, 4:62%, 5:70%
capas = [(u"1/2 pie LP métrico o catalán 40 mm< G < 60 mm", 0.11),
         (u"Mortero de áridos ligeros [vermiculita perlita]", 0.01),
         (u"EPS Poliestireno Expandido [ 0.037 W/[mK]]", 0.03),
         (u"Tabique de LH sencillo [40 mm < Espesor < 60 mm]", 0.03),
         (u"Enlucido de yeso 1000 < d < 1300", 0.01),]
#valores1 = {"U":0.804, "S_total":2.16, "fRsi":0.80}

cerramiento = Cerramiento(u"Cerramiento tipo", u"Descripción",
                          capas, Rse=0.04, Rsi=0.13)
app = GtkCondensa(cerramiento, climae, climai)
app.main()